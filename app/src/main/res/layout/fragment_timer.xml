<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ProgressBar
      android:id="@+id/viewProgressbar"
      style="@style/Widget.AppCompat.ProgressBar.Horizontal"
      android:layout_width="320dp"
      android:layout_height="320dp"
      android:indeterminateOnly="false"
      android:max="100"
      android:progressBackgroundTint="@color/gray"
      android:progressDrawable="@drawable/circular_progressbar"
      android:progressTint="@color/purple_700"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:progress="30" />
    
    <TextView
      android:id="@+id/viewTimer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="48dp"
      app:layout_constraintBottom_toBottomOf="@id/viewProgressbar"
      app:layout_constraintEnd_toEndOf="@id/viewProgressbar"
      app:layout_constraintStart_toStartOf="@id/viewProgressbar"
      app:layout_constraintTop_toTopOf="@id/viewProgressbar"
      tools:text="00:00:00" />
    
    <Button
      android:id="@+id/viewStartPauseBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="36dp"
      android:layout_marginBottom="100dp"
      android:text="@string/timer_start"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/viewCancelBtn"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent" />
    
    <Button
      android:id="@+id/viewCancelBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/timer_cancel"
      app:layout_constraintBottom_toBottomOf="@id/viewStartPauseBtn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/viewStartPauseBtn"
      app:layout_constraintTop_toTopOf="@id/viewStartPauseBtn" />
    
    <FrameLayout
      android:id="@+id/viewAdContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>